{
  "mcpServers": {
    "docmost": {
      "command": "npx",
      "args": [
        "tsx",
        "./packages/mcp-bridge/src/server.ts"
      ],
      "env": {
        "MCP_DEBUG": "true",
        "MCP_SERVER_URL": "http://localhost:3000",
        "MCP_API_KEY": "$(cat .mcp-api-key)",
        "NODE_ENV": "development"
      }
    }
  }
}